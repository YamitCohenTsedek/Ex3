@{
    ViewBag.Title = "display";
}

<html>
<body background="~/Content/earth.png" style="background-size:100% 100%; background-attachment:fixed">
    <canvas id="flightLocationCanvas" style="background-size:100% 100%; top:0; left:0; margin:0"></canvas>
    <script>
        var c = document.getElementById("flightLocationCanvas");
        c.width = window.innerWidth;
        c.height = window.innerHeight;
        c.style.position = "absolute";
        var ctx = c.getContext("2d");
        // get the lan and lot values from the controller
        var lon = @ViewBag.Lon;
        var lat = @ViewBag.Lat;
        // normalize the values of the lon and the lat
        var normalizedLon = (lon + 180) * (c.width / 360);
        var normalizedLat = (lat + 90) * (c.height / 180);
        // draw the location of the flight simulator
        ctx.beginPath();
        ctx.lineWidth = 3;
        ctx.arc(normalizedLon, normalizedLat, 6, 0, 2 * Math.PI);
        ctx.fillStyle = "Red";
        ctx.fill();
        ctx.strokeStyle = "Blue";
        ctx.stroke();
        ctx.closePath();
    </script>

</body>
</html>